          <view class="weui-label">
            上传驾驶证件
          </view>
        </view>
      </view>
      <view class="weui-cell" style="padding: 0 20rpx">
        <view class="img-box">
          <image src="/img/default.png" mode="aspectFit" style="width:350rpx;height:240rpx;" />
          <image src="/img/default.png" mode="aspectFit" style="width:350rpx;height:240rpx;margin-left: 10rpx" />
        </view>
      </view>
      <view class="img-box" style="padding-bottom: 20rpx;">
        <view>
          驾驶证
        </view>
        <view>
          行驶证
        </view>
      </view>
      <!--身份证-->
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <view class="weui-label">
            上传身份证件
          </view>
        </view>
      </view>
      <view class="weui-cell" style="padding: 0 20rpx">
        <view class="img-box">
          <image src="/img/default.png" mode="aspectFit" style="width:350rpx;height:240rpx;" />
          <image src="/img/default.png" mode="aspectFit" style="width:350rpx;height:240rpx;margin-left: 10rpx" />
        </view>
      </view>
      <view class="img-box" style="padding-bottom: 20rpx;">
        <view>
          正面
        </view>
        <view>
          反面
        </view>
      </view>
